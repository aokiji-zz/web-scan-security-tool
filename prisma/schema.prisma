// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Target {
  domain     String?
  ipAddress  String
  url        String?
  serviceIds Int?
  Services   Service[] @relation("targetServices") // Defina um nome para a relação
  id         Int       @id() @default(autoincrement())
}

model Service {
  port     Int
  protocol String
  state    String
  service  String
  version  String?
  product  String?
  id       Int     @id() @default(autoincrement())
  target   Target @relation("targetServices", fields: [targetId], references: [id]) // Referência à relação no modelo Target
  targetId Int
}
